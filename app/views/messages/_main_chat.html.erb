  <div class="rigth-header">
    <div class="header-btn">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="messages">
  <div class="messeage">
    <div class="upper-message">
      <div class="message-user">
         koba
      </div>
      <div class="message-date">
        2020/10/10(stu)11:20
      </div>
    </div>
    <div class="lower-message">
      <div class="message-content">
        ブンブンハロー
      </div>
    </div>
  </div>
  <div class="message">
    <div class="upper-message">
      <div class="message-user">
        humi
      </div>
      <div class="message-date">
        2020/10/10(stu)11:45
      </div>
    </div>
    <div class="lower-message">
